<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="ReqRes Test Suite">
    <listeners>
        <listener
                class-name="io.github.mfaisalkhatri.helper.TestListener"/>
    </listeners>
    <test name="Authentication Tests">
        <classes>
            <class name="io.github.mfaisalkhatri.restapi.TestAuthentication">
                <methods>
                    <include name="testAuthenticationToken"/>
                    <include name="testAuthToken"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Get Request Tests">
        <classes>
            <class name="io.github.mfaisalkhatri.restapi.TestGetRequests">
                <methods>
                    <include name="getRequestTest"/>
                    <include name="getRequestTestWithQueryParam"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Get Tests with Rest Assured Config">
        <classes>
            <class name="io.github.mfaisalkhatri.restapi.TestGetRequestWithRestAssuredConfig">
                <methods>
                    <include name="getRequestTestwithRestAssuredConfig"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Post Request tests">
        <classes>
            <class name="io.github.mfaisalkhatri.restapi.TestPostRequests">
                <methods>
                    <include name="testPostRequests"/>
                </methods>
            </class>
            <class name="io.github.mfaisalkhatri.restapi.PostRequestBuilderExample">
                <methods>
                    <include name="postTestUsingBuilderPattern"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Put Request Tests">
        <classes>
            <class name="io.github.mfaisalkhatri.restapi.TestPutRequests">
                <methods>
                    <include name="putRequestsTests"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Patch Request tests">
        <classes>
            <class name="io.github.mfaisalkhatri.restapi.TestPatchRequests">
                <methods>
                    <include name="patchRequestTests"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Delete Requests tests ">
        <classes>
            <class name="io.github.mfaisalkhatri.restapi.TestDeleteRequests">
                <methods>
                    <include name="deleteRequestTests"/>
                </methods>
            </class>
        </classes>
    </test>
</suite> <!-- Suite -->